#!/usr/bin/perl

use strict;
use warnings;

use Getopt::Long;

use Template::Process; my $VERSION = $Template::Process::VERSION;

my %options = (
);
GetOptions(
   \%options,
   'tt=s',
   'data|y=s@',
   'out|o=s'
);

my $tt = Template::Process->new();
$tt->process(TT => $options{tt}, 
             DATA => $options{data},
             OUT => $options{out})
    or die "$0: ", $tt->error;

__END__
=head1 NAME

tt - Process TT2 templates against data files

=head1 SYNOPSIS

  $ tt --tt my-template.html --data data.yaml --out page.html

  $ tt --tt foo.tt.txt -y grok.yml -o bar.txt


=head1 SEE ALSO

  Template::Process

